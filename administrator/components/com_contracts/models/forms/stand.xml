<?xml version="1.0" encoding="utf-8"?>
<form addrulepath="/administrator/components/com_contracts/models/rules">
    <fieldset name="general">
        <field
                name="standID"
                type="Stand"
                label="COM_CONTRACTS_FORM_STAND_NUMBER_LABEL"
                description="COM_CONTRACTS_FORM_STAND_NUMBER_DESC"
                required="true"
                class="span12"
        />
        <field
                name="type"
                type="list"
                label="COM_CONTRACTS_FORM_STAND_TYPE_LABEL"
                description="COM_CONTRACTS_FORM_STAND_TYPE_DESC"
                required="true"
                class="span12"
        >
                <option value="4">COM_CONTRACTS_STAND_TYPE_4</option>
                <option value="0">COM_CONTRACTS_STAND_TYPE_0</option>
                <option value="1">COM_CONTRACTS_STAND_TYPE_1</option>
                <option value="2">COM_CONTRACTS_STAND_TYPE_2</option>
                <option value="3">COM_CONTRACTS_STAND_TYPE_3</option>
                <option value="5">COM_CONTRACTS_STAND_TYPE_5</option>
        </field>
        <field
                name="status"
                type="list"
                label="COM_CONTRACTS_FORM_STAND_STATUS_LABEL"
                description="COM_CONTRACTS_FORM_STAND_STATUS_DESC"
                default="0"
                required="true"
                class="span12"
        >
                <option value="0">COM_CONTRACTS_STAND_STATUS_0</option>
                <option value="1">COM_CONTRACTS_STAND_STATUS_1</option>
                <option value="2">COM_CONTRACTS_STAND_STATUS_2</option>
                <option value="3">COM_CONTRACTS_STAND_STATUS_3</option>
                <option value="4">COM_CONTRACTS_STAND_STATUS_4</option>
        </field>
        <field
                name="freeze"
                type="text"
                label="COM_CONTRACTS_FORM_STAND_FREEZE_LABEL"
                description="COM_CONTRACTS_FORM_STAND_FREEZE_DESC"
                hint="COM_CONTRACTS_FORM_STAND_FREEZE_HINT"
                autocomplete="off"
                class="span12"
        />
        <field
                name="comment"
                type="textarea"
                label="COM_CONTRACTS_FORM_STAND_COMMENT_LABEL"
                description="COM_CONTRACTS_FORM_STAND_COMMENT_DESC"
                hint="COM_CONTRACTS_FORM_STAND_COMMENT_HINT"
                autocomplete="off"
                rows="5"
                class="span12"
        />
        <field
                name="id"
                type="hidden"
        />
        <field
                name="contractID"
                type="hidden"
        />
    </fieldset>
    <fieldset name="production">
        <field
                name="bypassing"
                type="radio"
                label="COM_CONTRACTS_FORM_STAND_BYPASSING_LABEL"
                description="COM_CONTRACTS_FORM_STAND_BYPASSING_DESC"
                class="btn-group btn-group-yesno"
                required="true"
                default="0"
        >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field
                name="production_diversification"
                type="text"
                label="COM_CONTRACTS_FORM_STAND_PRODUCTION_DIVERSIFICATION_LABEL"
                description="COM_CONTRACTS_FORM_STAND_PRODUCTION_DIVERSIFICATION_DESC"
                hint="COM_CONTRACTS_FORM_STAND_PRODUCTION_DIVERSIFICATION_HINT"
                class="span12"
        />
        <field
                name="production_first_in_forum"
                type="text"
                label="COM_CONTRACTS_FORM_STAND_PRODUCTION_FIRST_IN_FORUM_LABEL"
                description="COM_CONTRACTS_FORM_STAND_PRODUCTION_FIRST_IN_FORUM_DESC"
                hint="COM_CONTRACTS_FORM_STAND_PRODUCTION_FIRST_IN_FORUM_HINT"
                class="span12"
        />
        <field
                name="production_first_in_world"
                type="text"
                label="COM_CONTRACTS_FORM_STAND_PRODUCTION_FIRST_IN_WORLD_LABEL"
                description="COM_CONTRACTS_FORM_STAND_PRODUCTION_FIRST_IN_WORLD_DESC"
                hint="COM_CONTRACTS_FORM_STAND_PRODUCTION_FIRST_IN_WORLD_HINT"
                class="span12"
        />
    </fieldset>
</form>