<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field
                name="search"
                type="text"
                label="COM_CONTRACTS_FILTER_STATUSES"
                description="COM_CONTRACTS_FILTER_STATUSES"
                hint="COM_CONTRACTS_FILTER_STATUSES"
                autocomplete="off"
                class="js-stools-search-string"
        />
    </fields>
    <fields name="list">
        <field
                name="fullordering"
                type="list"
                onchange="this.form.submit();"
                default="s.ordering asc"
        >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="s.title ASC">COM_CONTRACTS_SORTING_TITLE_ASC</option>
            <option value="s.title DESC">COM_CONTRACTS_SORTING_TITLE_DESC</option>
            <option value="s.ordering ASC">COM_CONTRACTS_SORTING_ORDERING_ASC</option>
            <option value="s.ordering DESC">COM_CONTRACTS_SORTING_ORDERING_DESC</option>
            <option value="s.id ASC">COM_CONTRACTS_SORTING_ID_ASC</option>
            <option value="s.id DESC">COM_CONTRACTS_SORTING_ID_DESC</option>
        </field>
        <field
                name="limit"
                type="limitbox"
                class="input-mini"
                default="0"
                onchange="this.form.submit();"
        />
    </fields>
</form>